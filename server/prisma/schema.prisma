generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         Int        @id @default(autoincrement())
  name       String     @default("\"\"")
  last_name  String     @default("\"\"")
  position   String
  department Int
  salary     Int
  is_leader  Boolean
  created_at DateTime   @db.Date
  company    String
  Department Department @relation(fields: [department], references: [id], onUpdate: NoAction)
}

model Department {
  id          Int        @id @default(autoincrement())
  created_at  DateTime   @db.Date
  description String
  name        String
  Employee    Employee[]
}
