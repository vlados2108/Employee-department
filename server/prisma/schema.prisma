generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         Int         @id @default(autoincrement())
  name       String?     @default("\"\"")
  last_name  String?     @default("\"\"")
  position   String?
  department Int?
  salary     Int?
  is_leader  Boolean?
  Department Department? @relation(fields: [department], references: [id], onDelete: Restrict, onUpdate: NoAction)
}

model Department {
  id              Int        @id @default(autoincrement())
  foundation_date DateTime?  @db.Date
  description     String?
  name            String?
  company         String?
  Employee        Employee[]
}
